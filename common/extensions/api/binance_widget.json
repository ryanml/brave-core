[
  {
    "namespace": "binanceWidget",
    "description": "Use the <code>chrome.binanceWidget</code> API to receive notifications about Dapp detection.",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/binance_widget_api.h"
    },
    "events": [
    ],
    "functions": [
      {
        "name": "getAccountBalance",
        "type": "function",
        "description": "Obtain account information",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "btc_balance",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "setAPIKey",
        "type": "function",
        "description": "Sets a user's API key information",
        "parameters": [
          {
            "name": "apiKey",
            "type": "string"
          }, {
            "name": "secretKey",
            "type": "string"
          }
        ]
      },
      {
        "name": "getUserTLD",
        "type": "function",
        "description": "Gets the appropriate Binance TLD per a user's region",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "userTLD",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "validateAPIKey",
        "type": "function",
        "description": "Validates that the API key is valid",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "status",
                "type": "integer",
                "description": "The HTTP status code"
              }, {
                "name": "unauthorized",
                "type": "boolean",
                "description": "Helpful for a clear indication that the error is explicitly unauthorized"
              }
            ]
          }
        ]
      },
      {
        "name": "getBTCUSDValue",
        "type": "function",
        "description": "Fetches latest BTC value in USD",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "btcUSDValue",
                "type": "string"
              }
            ]
          }
        ]
      }
    ],
    "types": [
    ],
    "properties": {
    }
  }
]
