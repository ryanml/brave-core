[
    {
      "namespace": "gemini",
      "description": "Use the <code>chrome.gemini</code> to interact with the Gemini services.",
      "compiler_options": {
        "implemented_in": "brave/browser/extensions/api/gemini_api.h"
      },
      "events": [
      ],
      "functions": [
        {
          "name": "getClientUrl",
          "type": "function",
          "description": "Fetches the Oauth Url for Gemini",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "clientUrl",
                  "type": "string"
                }
              ]
            }
          ]
        },
        {
          "name": "getAccessToken",
          "type": "function",
          "description": "Facilitates access token creation given a temporary code",
          "parameters": [
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "success",
                  "type": "boolean",
                  "description": "Indicates the access token was retrieved successfully"
                }
              ]
            }
          ]
        },
        {
          "name": "getTickerPrice",
          "type": "function",
          "description": "Retrieves ticker price for a given asset",
          "parameters": [
            {
              "type": "string",
              "name": "asset"
            },
            {
              "type": "function",
              "name": "callback",
              "parameters": [
                {
                  "name": "price",
                  "type": "string"
                }
              ]
            }
          ]
        }
      ],
      "types": [
      ],
      "properties": {
      }
    }
  ]
  